<h2 class="mb-4 text-primary fw-bold">All Posts</h2>
<div class="table-responsive">
  <table class="table table-hover align-middle shadow-sm bg-white rounded">
    <thead class="table-primary">
      <tr>
        <th>Title</th>
        <th>Status</th>
        <th>User</th>
        <th>Comments</th>
        <th>Created</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td class="fw-semibold"><%= link_to post.title, post_path(post), class: 'text-decoration-none text-primary' %></td>
          <td><span class="badge <%= post.status == 'published' ? 'bg-success' : 'bg-secondary' %>"><%= post.status.capitalize %></span></td>
          <td><%= post.user.email %></td>
          <td><span class="badge bg-info text-dark"><%= post.comments.count %></span></td>
          <td><%= post.created_at.strftime('%Y-%m-%d') %></td>
          <td>
            <%= button_to "Delete", admin_post_path(post), method: :delete, data: { confirm: "Delete this post?" }, class: "btn btn-sm btn-outline-danger rounded-pill" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div> 