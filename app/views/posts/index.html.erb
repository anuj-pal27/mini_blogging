<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Posts</h1>
    <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-outline-danger" %>
  </div>

  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div class="row g-3">
    <% @posts.each do |post| %>
      <div class="col-12 col-md-6 col-lg-4">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <h5 class="card-title"><%= post.title %></h5>
            <p class="card-text text-truncate"><%= post.body %></p>
            <%= link_to "Show", post, class: "btn btn-sm btn-primary me-2" %>
            <%= link_to "Edit", edit_post_path(post), class: "btn btn-sm btn-outline-secondary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-4">
    <%= link_to "New post", new_post_path, class: "btn btn-success" %>
  </div>
</div>
