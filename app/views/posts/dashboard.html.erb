<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">My Posts Dashboard</h1>
    <%= link_to "New Post", new_post_path, class: "btn btn-success" %>
  </div>

  <% if @posts.empty? %>
    <div class="alert alert-info">You have not created any posts yet.</div>
  <% else %>
    <div class="table-responsive">
      <table class="table table-hover align-middle">
        <thead class="table-light">
          <tr>
            <th>Title</th>
            <th>Status</th>
            <th>Comments</th>
            <th>Preview</th>
            <th>Created</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= link_to post.title, post %></td>
              <td>
                <% if post.status == 'published' %>
                  <span class="badge bg-success">Published</span>
                <% else %>
                  <span class="badge bg-secondary">Draft</span>
                <% end %>
              </td>
              <td><span class="badge bg-info text-dark"><%= post.comments.count %></span></td>
              <td><%= truncate(post.body, length: 60) %></td>
              <td><%= post.created_at.strftime('%Y-%m-%d') %></td>
              <td>
                <%= link_to "Edit", edit_post_path(post), class: "btn btn-sm btn-outline-primary me-1" %>
                <%= button_to "Delete", post, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-outline-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div> 