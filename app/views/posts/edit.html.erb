<% content_for :title, "Editing post" %>

<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Edit Post</h1>
    <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-outline-danger" %>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <%= render "form", post: @post %>
    </div>
  </div>

  <div class="mt-3">
    <%= link_to "Show this post", @post, class: "btn btn-outline-primary me-2" %>
    <%= link_to "Back to posts", posts_path, class: "btn btn-outline-secondary" %>
  </div>
</div>
